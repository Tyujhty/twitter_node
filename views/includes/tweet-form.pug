form(class='card' action='tweet/new' method='post')
    .form-title 
        h4 Post a new tweet
    .form-body
        .form-item
            textarea(name="content" placeholder="What's up today ?")
        if errors
            ul
                each error in errors
                    li(class='text-danger')= error
        .form-item
            input(type="submit", value='Tweeter' class='btn btn-primary')
