script(src="/js/search-bar.js") 

.top-bar
    a(href="/")
        img(src="/images/logo.png", alt="Logo Twitter" height='80px')
    .search-bar
        form
            i.fa-solid.fa-magnifying-glass
            input#search-input(type="text", name="search" placeholder="Looking for someone ?")
        #search-menu-container
    ul
        if isAuthenticated 
            li
                a(class='btn btn-primary' href='/auth/signout') Log out
        else
            li
                a(href="/user/signup/form" class='btn btn-primary') Sign in
            li
                a(href="/auth/signin/form" class='btn btn-primary') Log in
            
